<div class="login-page">
  <div class="login-title">
    <h2>Log in</h2>
  </div>
  <div class="login-form">
    <%= form_for(:session, url: login_path) do |f| %>
      
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password %>
      </div>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>

      <h3>Not signed up yet? <%=link_to "Signup", new_user_path %></h3>

    <% end %>
  </div>
</div>