<h1>Create Activity</h1>

<div class="new-form">
  <%= form_for @activity do |form| %>
    <div class="field">
        <%= form.label :name %><br />
        <%= form.text_field :name %>
      </div>

      <div class="field">
        <%= form.label :lesson_time %><br />
        <%= form.datetime_field :lesson_time %>
      </div>

      <div class="field">
      <span>Instructors:</span>
        <%= fields_for :instructors do |ff|  %>
          <%= ff.label :name %>
          <%= ff.text_field :name %>
        <% end%>
      </div>

      <%= form.collection_select :instructor_id, Instructor.all, :id, :name %>

      <div class="actions">
        <%= form.submit "Create" %>
      </div>
  <% end %>
</div>