

<table class="table">
  <%# <thead>
    <tr>
      <th class="table-header" colspan="4"><strong>Schedule</strong></th>
    </tr>
  </thead> %>
  <tbody>
    <tr>
        <th><h2>Student</h2></th>
        <th><h2>Activity</h2></th>
        <th><h2>Instructor</h2></th>
        <th><h2>Lesson Time</h2></th>
      </tr>
    <% activities.each do |activity| %>
      <tr>
        <td><%= activity.user_full_name %></td>
        <td><%= activity.name %></td>
        <td><%= activity.instructor.name %></td>
        <td><%= activity.lesson_time.strftime("%B %d, %Y at %-l%P") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

